<h2 style="color: #ffffff;">Forgot your password?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", style: "background-color: #333; color: #fff; border: 1px solid #444;" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send me reset password instructions", class: 'btn btn-light' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>