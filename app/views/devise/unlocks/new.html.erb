<h2 style="color: #ffffff;">Resend unlock instructions</h2>

<%= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification, style: "color: #ff6347;" %>
  <%= f.full_error :unlock_token, style: "color: #ff6347;" %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", style: "background-color: #333; color: #fff; border: 1px solid #444;" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Resend unlock instructions", class: 'btn btn-light', style: "background-color: #1e90ff; color: #fff; border: none;" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
