<h2 style="color: #ffffff;">Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true, input_html: { style: "background-color: #333; color: #fff; border: 1px solid #444;" } %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p style="color: #ffffff;">Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password,
                hint: "leave it blank if you don't want to change it",
                required: false,
                input_html: { autocomplete: "new-password", style: "background-color: #333; color: #fff; border: 1px solid #444;" } %>
    <%= f.input :password_confirmation,
                required: false,