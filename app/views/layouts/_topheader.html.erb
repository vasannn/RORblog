<header class="blog-header py-3" style="background-color: #121212; color: #ffffff;">
  <div class="row flex-nowrap justify-content-between align-items-center">
    <div class="col-4 pt-1">
      <%= link_to "Categories", categories_path, class: "link-light" if policy(:category).index? %>
    </div>
    <div class="col-4 text-center">
      <span style="font-weight: bold; color: #add8e6; font-size: 30px">Vasan's Blog</span>
    </div>
    <div class="col-4 d-flex justify-content-end align-items-center">
      <%= render 'layouts/dropdown' if user_signed_in? %>
      <%= render 'layouts/mainlinks' unless user_signed_in? %>
    </div>
  </div>
</header>
