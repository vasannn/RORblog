<%= simple_form_for(@category) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, input_html: { class: 'bg-dark text-light' }, label_html: { class: 'text-light' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-outline-light' %>
    <%= link_to "Cancel", categories_path, class: 'btn btn-outline-light' %>
  </div>
<% end %>
