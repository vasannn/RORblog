<%= simple_form_for article do |f| %>
  <div class="form-inputs">
    <%= f.input :title, error: 'Title is mandatory, please specify one', input_html: { class: 'bg-dark text-light' }, label_html: { class: 'text-light' } %>
    <%= f.input :body, input_html: { rows: 10, class: 'bg-dark text-light' }, label_html: { class: 'text-light' } %>
    <%= f.association :category, prompt: 'Choose Category', input_html: { class: 'bg-dark text-light' }, label_html: { class: 'text-light' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-outline-light' %>
    <%= link_to "Cancel", root_path, class: 'btn btn-outline-light' %>
  </div>
<% end %>